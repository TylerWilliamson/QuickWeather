<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_standard">

    <!-- content description is on AlertCardView -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:layout_column="0"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/margin_standard"
        android:src="@drawable/ic_error_outline_white_24dp"
        app:tint="@color/text_primary_emphasis"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/alert_text_title"
        style="@style/QuickWeather.Text.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="center_vertical" />

    <TextView
        android:id="@+id/alert_text_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/text_size_smaller" />

</GridLayout>
