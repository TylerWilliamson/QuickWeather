<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="?dialogPreferredPadding"
    android:paddingRight="?dialogPreferredPadding"
    android:paddingTop="@dimen/margin_half">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editlocation_location_layout"
        style="@style/QuickWeather.TextInput.Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/dialog_edit_location_name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editlocation_location"
            style="@style/QuickWeather.TextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editlocation_latitude_layout"
        style="@style/QuickWeather.TextInput.Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/dialog_edit_location_latitude">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editlocation_latitude"
            style="@style/QuickWeather.TextInput"
            android:digits="0123456789,.-"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editlocation_longitude_layout"
        style="@style/QuickWeather.TextInput.Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/dialog_edit_location_longitude">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editlocation_longitude"
            style="@style/QuickWeather.TextInput"
            android:digits="0123456789,.-"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal" />
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>